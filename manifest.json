{
    "version": "1.0.4",
    "manifest_version": 3,
    "name": "Lumos",
    "description": "An LLM co-pilot for browsing the web, powered by local LLMs. Your prompts never leave the browser.",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "Lumos",
        "default_icon": "assets/wand_128.png"
    },
    "icons": {
        "16": "assets/wand_16.png",
        "32": "assets/wand_32.png",
        "48": "assets/wand_48.png",
        "128": "assets/wand_128.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "options_ui": {
        "page": "js/options.html",
        "open_in_tab": false
    }
}